{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "downlevelIteration": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte",
    "src/**/*.js",
    "src/app.d.ts",
    ".svelte-kit/ambient.d.ts"
  ],
  "exclude": ["public/*"]
}
